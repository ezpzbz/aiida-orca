{
    "name": "aiida-orca",
    "author": "Pezhman Zarabadi-Poor",
    "author_email": "pzarabadip@gmail.com",
    "description": "AiiDA plugin for ORCA code",
    "url": "https://github.com/pzarabadip/aiida-orca",
    "license": "MIT",
    "classifiers": [
        "Environment :: Plugins",
        "Programming Language :: Python :: 3.8",
        "Programming Language :: Python :: 3.9",
        "Intended Audience :: Science/Research",
        "License :: OSI Approved :: MIT License",
        "Framework :: AiiDA"
    ],
    "version": "0.6.0",
    "setup_requires": ["reentry"],
    "install_requires": [
        "aiida_core[atomic_tools] >= 1.6.0, <2.0.0",
        "periodictable"
    ],
    "entry_points": {
        "aiida.calculations": [
            "orca.orca = aiida_orca.calculations:OrcaCalculation",
            "orca.ase = aiida_orca.calculations:OrcaAsaCalculation"
        ],
        "aiida.parsers": [
            "orca_base_parser = aiida_orca.parsers:OrcaBaseParser"
        ],
        "aiida.workflows": [
            "orca.base = aiida_orca.workchains:OrcaBaseWorkChain"
        ]
    },
    "reentry_register": true,
    "data_files": [
        [".", ["setup.json"]]
    ],
    "extras_require": {
      "test": [
            "pgtest==1.2.0",
            "pytest>=4.4,<5.0.0",
            "pytest-cov>=2.6.1,<3.0.0"
      ],
	    "pre-commit": [
		    "pre-commit==2.0.1",
		    "yapf==0.28.0",
		    "prospector==1.2.0",
            "pylint==2.4.4"
        ],
        "docs": [
            "sphinx",
            "sphinxcontrib-contentui",
            "sphinxcontrib-details-directive",
            "sphinx-rtd-theme"
        ]
    }
}
